  "main": "electron.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:frontend\" \"npm:dev:backend\" \"npm:dev:electron\"",
    "dev:frontend": "vite --config frontend/vite.config.ts",
    "dev:electron": "cross-env NODE_ENV=development electron .",
