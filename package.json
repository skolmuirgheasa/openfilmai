{
  "name": "openfilmai",
  "private": true,
  "version": "0.1.0",
  "description": "OpenFilmAI â€“ Electron + React + FastAPI scaffolding",
  "main": "electron.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n BACKEND,FRONTEND,ELECTRON -c cyan,green,magenta \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:electron\"",
    "dev:frontend": "node scripts/frontend-port-check.js && npx vite --config frontend/vite.config.ts --host",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "predev:backend": "node scripts/backend-port-check.js",
    "dev:backend": ".venv/bin/python -m uvicorn backend.main:app --reload --host 127.0.0.1 --port 8000",
    "build": "npm run build:frontend",
    "build:frontend": "vite build --config frontend/vite.config.ts",
    "start": "cross-env NODE_ENV=production electron ."
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "clsx": "^2.1.1",
    "kill-port": "^2.0.1",
    "lucide-react": "^0.553.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-player": "^3.3.3",
    "tailwind-merge": "^3.4.0",
    "wavesurfer.js": "^7.11.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "wait-on": "^7.2.0"
  }
}
